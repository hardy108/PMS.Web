@using Microsoft.Extensions.Options
@inject IOptions<PMS.Shared.Models.AppSetting> appSettings
@{
    int version = new Random().Next();

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @Html.Partial("_ReadConfigJs")
    <title>
        PMS
        @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            @: - @ViewBag.Title
        }
    </title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/css/font.google.apis.css">
    <link href="~/css/bundles.min.css" rel="stylesheet" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


    <script src="~/js/bundles.min.js"></script>
    <script src="~/Scripts/authv2.js?version=@(version)"></script>
    <script src="~/Scripts/utility.js?version=@(version)"></script>
    <script src="~/js/plugins/waitme/waitMe.js"></script>
    <script type="text/javascript">authServices.kickIfNotLoggin()</script>
    <!-- <script data-pace-options='{ "elements": { "selectors": [".selector"] }, "startOnPageLoad": false }' src="~/Content/js/plugins/pace/pace.min.js"></script>-->
   
</head>
<body class="hold-transition @(appSettings.Value.Skin) sidebar-mini">

    <div class="wrapper">
        @Html.Partial("_Header")
        @Html.Partial("_Sidebar")

        <div class="content-wrapper">
            <section class="content-header">
                <h1 id="pageHeader"></h1>
            </section>

            <section class="content">
                @RenderBody()
            </section>
        </div>

        @*@Html.Partial("_ControlSidebar")*@
    </div>

    @*<script src="@RouteJs.RouteJsHandler.HandlerUrl"></script>
        <script src="@EnumHandler.HandlerUrl"></script>*@

    @RenderSection("ViewSpecificJavascript", required: false)

    <div id="LoVContainer">

    </div>
</body>
</html>

