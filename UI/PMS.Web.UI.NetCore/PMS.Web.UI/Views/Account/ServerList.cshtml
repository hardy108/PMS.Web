
@{
    Layout = null;
}
<html style="height: auto; min-height: 100%;">
<head>
    <script src="~/Scripts/serverlist.js"></script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>PMS - Server Lists</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/css/bundles.min.css" rel="stylesheet" />    
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
        </div>
        <div class="login-box-body">
            <div style="height:110px;text-align:center">
                <img src="~/img/logo.png" height="70px" width="300px" />
                <p style="color:darkgoldenrod;font-size:medium;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-weight:bold"> PLANTATION MANAGEMENT SYSTEM</p>
            </div>

            <form name="userForm">
                <div class='form-group'>
                    <label>Server List</label>
                    <select id='cboServerList' name='cboServerList' class='form-control select2' style='width: 100%;'>
                        <option value="http://10.10.21.50:8789">BHL Server</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <button type="button" class="btn btn-primary btn-block btn-flat pull-left" onclick="goto()">Go</button>
                    </div>
                </div>
            </form>


        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
</body>
</html>


<script>
    var goto = function () {
        var url = $("#cboServerList").val();
        if (!url) {
            alert("Invalid Server");
            return;
        }
        window.open(url);
    }
    $(function () {
        var firstItem;
        $("#cboServerList").children().remove().end();
        for (var key in serverLists) {
            var item = serverLists[key];
            if (!firstItem)
                firstItem = item;
            $("#cboServerList").append($("<option></option>")
                .attr("value", item)
                .html(key));
        }
        $("#cboServerList").val(firstItem);



    });
</script>