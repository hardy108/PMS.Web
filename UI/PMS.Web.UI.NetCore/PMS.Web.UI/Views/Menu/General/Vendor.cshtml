@using PMS.Web.UI.Code
@{
    ViewData["Title"] = "Ekspedisi & Vendor";
    Layout = null;

    string mode = ViewBag.Mode;
    bool isReadonly = (!mode.Equals("New") && !mode.Equals("Edit"));
    bool isReadonlyWhenNotInsert = !mode.Equals("New");

    DateTime now = DateTime.Now;
    string strNow = now.ToString("yyyy-MM-dd HH:mm:ss");
    string strToday = now.ToString("yyyy-MM-dd");

}

<x-form id="@ViewBag.MainFormID">

    <x-form-row>
        <x-field-text id="CODE" binding-field="CODE" caption="Kode" read-only="@isReadonlyWhenNotInsert" xs-size="12" md-size="3">
        </x-field-text>

        <x-field-select id="TYPE" binding-field="TYPE" caption="Tipe" read-only="@ViewBag.ReadOnly" xs-size="12" md-size="3">
            <option value="E">Ekspedisi</option>
            <option value="V">Vendor</option>
        </x-field-select>

        <x-field-data-list-account id="ACCOUNTCODE" binding-field="ACCOUNTCODE" xs-size="12" md-size="3" caption="No Account" read-only="@ViewBag.ReadOnly" chain-to-relatives="true" min-length-search="2">
        </x-field-data-list-account>

        <x-field-select id="ACTIVE" binding-field="ACTIVE" caption="Aktif" xs-size="12" md-size="3" read-only="@ViewBag.ReadOnly" select-type="Boolean">
        </x-field-select>
    </x-form-row>

    <x-form-row>
        <x-field-text id="NAME" binding-field="NAME" caption="Nama" read-only="@ViewBag.ReadOnly" xs-size="12" md-size="12">
        </x-field-text>
    </x-form-row>

    <x-form-row>
        <x-field-text id="ADDRESS1" binding-field="ADDRESS1" caption="Alamat" read-only="@ViewBag.ReadOnly" xs-size="12" md-size="3">
        </x-field-text>
        <x-field-text id="ADDRESS2" binding-field="ADDRESS2" read-only="@ViewBag.ReadOnly" xs-size="12" md-size="3">
        </x-field-text>
        <x-field-text id="ADDRESS3" binding-field="ADDRESS3" read-only="@ViewBag.ReadOnly" xs-size="12" md-size="3">
        </x-field-text>
        <x-field-text id="ADDRESS4" binding-field="ADDRESS4" read-only="@ViewBag.ReadOnly" xs-size="12" md-size="3">
        </x-field-text>
    </x-form-row>

</x-form>

<script>
    var checkMode = function () {
        return true;
    };
    
    var beforeDisplay = function () {
        return true;
    };
    
    var customDisplay = function () {
        if (mode == "New") {
            $("#TYPE").val("E").trigger("change");
            $("#ACTIVE").val("true").trigger("change");
        }

        return true;
    }

    var beforeSaveRecord = function () {
        return true;
    }

    var beforeSendAction = function (action, savedRecord) {
        return savedRecord;
    }
</script>
