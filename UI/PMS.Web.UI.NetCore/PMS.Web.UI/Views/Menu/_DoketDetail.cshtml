@Html.Raw(modal)
@Html.Raw(jsonFormatter)

<script>
    var displayDoketDetail = function (data) {        
        @displayFunction;
        if (data.DOK_PEMANEN)
            $('#rowPemanen').show();
        else
            $('#rowPemanen').hide();

        if (data.DOK_PEMBRONDOL)
            $('#rowPembrondol').show();
        else
            $('#rowPembrondol').hide();

        if (data.DOK_MANDORID)
            $('#rowMandor').show();
        else
            $('#rowMandor').hide();

        if (data.DOK_KERANIID)
            $('#rowKerani').show();
        else
            $('#rowKerani').hide();

        if (data.DOK_CHECKERID)
            $('#rowChecker').show();
        else
            $('#rowChecker').hide();

    }
</script>
